    color: var(--color-primary);
}

@media (max-width: 768px) {
    .newsletter h2 {
        font-size: 2.5rem;
    }

    .newsletter-form {
        flex-direction: column;
        gap: var(--spacing-sm);

        .add-to-cart-btn {
            width: 100%;
            padding: 16px;
            background-color: var(--color-primary);
            color: var(--color-white);
            font-size: 1.1rem;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .add-to-cart-btn:hover {
            background-color: #000;
        }

        /* Footer */
        .site-footer {
            background-color: var(--color-secondary);
            padding: var(--spacing-lg) 0 var(--spacing-md);
            margin-top: var(--spacing-xl);
        }

        .footer-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: var(--spacing-lg);
            margin-bottom: var(--spacing-lg);
        }

        .footer-section h4 {
            margin-bottom: var(--spacing-sm);
            font-size: 1.1rem;
        }

        .footer-section ul {
            list-style: none;
        }

        .footer-section a {
            text-decoration: none;
            color: var(--color-text-light);
        }

        .footer-bottom {
            border-top: 1px solid var(--color-border);
            padding-top: var(--spacing-md);
            text-align: center;
            color: var(--color-text-light);
            font-size: 0.9rem;
        }

        @media (max-width: 768px) {
            .product-detail {
                grid-template-columns: 1fr;
            }

            .hero h1 {
                font-size: 2rem;
            }
        }

        /* Promo Banner */
        .promo-banner {
            background-color: var(--color-primary);
            color: var(--color-white);
            padding: var(--spacing-xl) 0;
            margin-bottom: var(--spacing-xl);
            position: relative;
            overflow: hidden;
        }

        .promo-banner .container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: var(--spacing-lg);
            align-items: center;
        }

        .promo-content {
            z-index: 2;
        }

        .promo-label {
            display: inline-block;
            background-color: var(--color-accent);
            color: var(--color-primary);
            padding: 4px 12px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: var(--spacing-sm);
            border-radius: 2px;
        }

        .promo-banner h2 {
            font-size: 3.5rem;
            padding: var(--spacing-xl) 0;
            margin-top: var(--spacing-xl);
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .newsletter::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, rgba(255, 255, 255, 0.03) 0%, transparent 100%);
            pointer-events: none;
        }

        .newsletter h2 {
            font-family: var(--font-serif);
            font-size: 3.5rem;
            font-weight: 400;
            font-style: italic;
            color: var(--color-accent);
            margin-bottom: var(--spacing-sm);
            letter-spacing: -1px;
        }

        .newsletter p {
            color: rgba(255, 255, 255, 0.7);
            margin-bottom: var(--spacing-lg);
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
            font-size: 1.1rem;
            font-weight: 300;
        }

        .newsletter-form {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: var(--spacing-md);
            max-width: 600px;
            margin: 0 auto;
            position: relative;
        }

        .newsletter-input {
            background: transparent;
            border: none;
            border-bottom: 1px solid rgba(255, 255, 255, 0.3);
            padding: 12px 0;
            width: 100%;
            color: var(--color-white);
            font-family: var(--font-sans);
            font-size: 1.1rem;
            transition: border-color 0.3s;
        }

        .newsletter-input:focus {
            outline: none;
            border-bottom-color: var(--color-accent);
        }

        .newsletter-input::placeholder {
            color: rgba(255, 255, 255, 0.3);
        }

        .newsletter-btn {
            background: transparent;
            border: 1px solid var(--color-accent);
            color: var(--color-accent);
            padding: 12px 32px;
            font-family: var(--font-sans);
            font-weight: 500;
            letter-spacing: 1px;
            text-transform: uppercase;
            font-size: 0.9rem;
            transition: all 0.3s;
            white-space: nowrap;
        }

        .newsletter-btn:hover {
            background: var(--color-accent);
            color: var(--color-primary);
        }

        @media (max-width: 768px) {
            .newsletter h2 {
                font-size: 2.5rem;
            }

            .newsletter-form {
                flex-direction: column;
                gap: var(--spacing-sm);
            }

            .newsletter-btn {
                width: 100%;
            }
        }

        /* Kalapu Animated Module */
        .kalapu-module {
            position: relative;
            height: 600px;
            background-color: #000;
            overflow: hidden;
            margin-bottom: var(--spacing-xl);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .kalapu-slideshow {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        .kalapu-slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            transition: opacity 1s ease-in-out, transform 1s ease-in-out;
            background-size: cover;
            background-position: center;
            transform: scale(1);
        }

        .kalapu-slide.active {
            opacity: 0.8;
            /* Increased from 0.6 for better visibility */
            transform: scale(1.1);
            transition: opacity 1s ease-in-out, transform 15s linear;
        }

        .kalapu-content {
            position: relative;
            z-index: 2;
            text-align: center;
            color: var(--color-white);
            padding: var(--spacing-md);
            border: 1px solid rgba(255, 255, 255, 0.2);
            background: rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(5px);
            max-width: 800px;
        }

        .kalapu-content h2 {
            font-family: 'Playfair Display', serif;
            font-size: 4rem;
            color: var(--color-accent);
            margin-bottom: var(--spacing-xs);
            text-transform: uppercase;
            letter-spacing: 4px;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
        }

        .kalapu-content .subtitle {
            font-family: var(--font-sans);
            font-size: 1.2rem;
            letter-spacing: 2px;
            text-transform: uppercase;
            margin-bottom: var(--spacing-md);
            display: block;
        }

        .kalapu-badges {
            display: flex;
            gap: var(--spacing-md);
            justify-content: center;
            margin-top: var(--spacing-md);
        }

        .kalapu-badge {
            border: 1px solid var(--color-white);
            padding: 8px 16px;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        @media (max-width: 768px) {
            .kalapu-module {
                height: 400px;
            }

            .kalapu-content h2 {
                font-size: 2.5rem;
            }
        }